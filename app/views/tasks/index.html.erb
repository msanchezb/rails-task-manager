<h1>Index</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to "Edit", edit_task_path(task)%> - <%= link_to "Delete", "/tasks/#{task.id}", :method => "delete" %> - <%= link_to task.title, task_path(task) %> -
      <% if task.completed == true %>
        <i style="color: green;" class="fas fa-thumbs-up"></i>
      <% else %>
        <i style="color: red;"" class="fas fa-thumbs-down"></i>
      <% end %>
    </li>

  <% end %>
</ul>

<%= link_to "New Task", new_task_path %>
